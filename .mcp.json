{
  "$schema": "https://cdn.jsdelivr.net/npm/@anthropic-ai/claude-code@latest/mcp-schema.json",
  "mcpServers": {
    "arifOS-Constitutional": {
      "command": "python",
      "args": ["-m", "arifos.mcp", "trinity"],
      "cwd": "C:/Users/User/arifOS",
      "env": {
        "PYTHONIOENCODING": "utf-8",
        "PYTHONUNBUFFERED": "1",
        "ARIFOS_MODE": "BRIDGE"
      },
      "disabled": false,
      "alwaysAllow": [
        "init_000",
        "agi_genius",
        "asi_act",
        "apex_judge",
        "vault_999"
      ]
    },
    "arifOS-Utils": {
      "command": "python",
      "args": ["-m", "arifos.mcp.mcp_utils_server"],
      "cwd": "C:/Users/User/arifOS",
      "env": {
        "PYTHONIOENCODING": "utf-8",
        "PYTHONUNBUFFERED": "1"
      },
      "disabled": false,
      "alwaysAllow": [
        "fetch_url",
        "shell",
        "grep_search"
      ]
    }
  }
}
