{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "deploy/AAA/AXIS/Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  },
  "services": [
    {
      "name": "AXIS",
      "root": ".",
      "dockerfilePath": "deploy/AAA/AXIS/Dockerfile",
      "env": {
        "PORT": "8001",
        "ARIFOS_ROLE": "AXIS",
        "ARIFOS_ENV": "production"
      },
      "volumes": [
        {
          "mount": "/app/arifos/mcp/sessions",
          "name": "axis-sessions"
        },
        {
          "mount": "/app/VAULT999",
          "name": "axis-vault"
        }
      ]
    },
    {
      "name": "ARIF",
      "root": ".",
      "dockerfilePath": "deploy/AAA/ARIF/Dockerfile",
      "env": {
        "PORT": "8002",
        "ARIFOS_ROLE": "ARIF",
        "ARIFOS_ENV": "production"
      },
      "dependsOn": ["AXIS"]
    },
    {
      "name": "APEX",
      "root": ".",
      "dockerfilePath": "deploy/AAA/APEX/Dockerfile",
      "env": {
        "PORT": "8003",
        "ARIFOS_ROLE": "APEX",
        "ARIFOS_ENV": "production"
      },
      "dependsOn": ["AXIS", "ARIF"]
    }
  ]
}
