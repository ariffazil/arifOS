{
    "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/specification/main/schema/claude-desktop.schema.json",
    "mcpServers": {
        "arifos": {
            "command": "python",
            "args": [
                "-m",
                "arifos.core.mcp.unified_server"
            ],
            "env": {
                "PYTHONPATH": "C:\\Users\\User\\OneDrive\\Documents\\GitHub\\arifOS"
            }
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "C:\\Users\\User\\OneDrive\\Documents\\GitHub\\arifOS"
            ]
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": ""
            }
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        }
    }
}
