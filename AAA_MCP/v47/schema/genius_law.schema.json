{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GENIUS LAW Specification",
  "description": "Schema for GENIUS LAW measurement metrics and protocols (Track B Authority)",
  "type": "object",
  "required": ["version", "genius_law", "authority"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "genius_law": {
      "type": "object",
      "required": ["G", "C_dark", "Psi"],
      "properties": {
        "G": {
          "type": "object",
          "required": ["description"],
          "properties": {
            "description": { "type": "string" },
            "formula": { "type": "string" },
            "thresholds": { "type": "object" }
          }
        },
        "C_dark": {
          "type": "object",
          "required": ["description"],
          "properties": {
            "description": { "type": "string" },
            "formula": { "type": "string" },
            "thresholds": { "type": "object" }
          }
        },
        "Psi": {
          "type": "object",
          "required": ["description"],
          "properties": {
            "description": { "type": "string" },
            "formula": { "type": "string" },
            "thresholds": { "type": "object" },
            "parameters": { "type": "object" }
          }
        },
        "Omega0": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "range": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "DeltaS": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "threshold": { "type": "number" }
          }
        },
        "Kappa_r": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "threshold": { "type": "number" }
          }
        }
      }
    },
    "measurement_protocols": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "authority": {
      "type": "string"
    }
  }
}