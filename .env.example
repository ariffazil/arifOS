# ============================================================================
# arifOS Environment Configuration Template
# ============================================================================
# Copy this to .env and fill in your actual values:
#   cp .env.example .env
#
# Then edit .env with your API keys and preferences.
# ============================================================================

# ============================================================================
# LLM Provider Configuration (SEA-LION via LiteLLM)
# ============================================================================

# Provider: Use "openai" for SEA-LION compatibility (OpenAI-compatible API)
ARIF_LLM_PROVIDER=openai

# API Base: SEA-LION API endpoint
ARIF_LLM_API_BASE=https://api.sea-lion.ai/v1

# API Key: Get yours at https://playground.sea-lion.ai
# REQUIRED: You must set this to your actual SEA-LION API key
ARIF_LLM_API_KEY=your-sealion-api-key-here

# SEA-LION API Key (direct, for play_session_live.py)
SEALION_API_KEY=your-sealion-api-key-here

# Model: SEA-LION model identifier (LOCKED)
# Note: LiteLLM will auto-prepend "openai/" for OpenAI-compatible endpoints
# Options: 
#   - aisingapore/Llama-SEA-LION-v3-70B-IT (default, most capable)
#   - aisingapore/Gemma-SEA-LION-v4-27B-IT (balanced)
#   - aisingapore/Qwen-SEA-LION-v4-32B-IT (fast)
ARIF_LLM_MODEL=aisingapore/Llama-SEA-LION-v3-70B-IT

# Generation parameters
ARIF_LLM_TEMPERATURE=0.7
ARIF_LLM_MAX_TOKENS=2048

# ============================================================================
# arifOS Governance Configuration
# ============================================================================

# Environment (production/development/test)
ARIFOS_ENV=development

# Enable W@W Federation governance organs
ARIFOS_ENABLE_WAW=true

# Cooling Ledger path (append-only audit trail)
ARIFOS_LEDGER_PATH=cooling_ledger/L1_cooling_ledger.jsonl

# ============================================================================
# API Server Configuration (for FastAPI deployment)
# ============================================================================

# Server host and port
ARIFOS_API_HOST=0.0.0.0
ARIFOS_API_PORT=8000

# Enable CORS (comma-separated origins)
ARIFOS_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Enable API documentation
ARIFOS_ENABLE_DOCS=true

# ============================================================================
# Memory Configuration (L7 Memory Stack - optional)
# ============================================================================

# Qdrant vector database (if using L7 memory)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Mem0 configuration
MEM0_ENABLED=false
MEM0_PROVIDER=qdrant

# ============================================================================
# Advanced Configuration (optional)
# ============================================================================

# Disable W@W organs for red-team testing (telemetry-only mode)
# ARIFOS_DISABLE_WAW=0

# Enable verbose logging
# ARIFOS_VERBOSE=false

# Custom Vault path (for testing alternative constitutions)
# ARIFOS_VAULT_PATH=vault-999

# ============================================================================
# Multi-Provider Failover Configuration (v45Ω Patch C - Optional)
# ============================================================================
# Enable automatic failover across multiple LLM providers for reliability.
# All responses still flow through 888_JUDGE → APEX_PRIME (governance preserved).
#
# Default: DISABLED (zero-break migration)
# Set ARIFOS_FAILOVER_ENABLED=true to enable
# ============================================================================

# Enable failover (disabled by default)
ARIFOS_FAILOVER_ENABLED=false

# Provider list (comma-separated, in order of preference)
# Example: claude_primary,openai_fallback,sealion_backup
ARIFOS_FAILOVER_PROVIDERS=claude_primary,openai_fallback

# ============================================================================
# Claude Sonnet 4.5 (Primary - Priority 0)
# ============================================================================
ARIFOS_FAILOVER_CLAUDE_PRIMARY_TYPE=claude
ARIFOS_FAILOVER_CLAUDE_PRIMARY_MODEL=claude-sonnet-4-5-20250929
ARIFOS_FAILOVER_CLAUDE_PRIMARY_API_KEY=your-anthropic-api-key-here
ARIFOS_FAILOVER_CLAUDE_PRIMARY_PRIORITY=0
ARIFOS_FAILOVER_CLAUDE_PRIMARY_TIMEOUT=30.0
ARIFOS_FAILOVER_CLAUDE_PRIMARY_MAX_RETRIES=2

# ============================================================================
# OpenAI GPT-4o (Fallback - Priority 1)
# ============================================================================
ARIFOS_FAILOVER_OPENAI_FALLBACK_TYPE=openai
ARIFOS_FAILOVER_OPENAI_FALLBACK_MODEL=gpt-4o
ARIFOS_FAILOVER_OPENAI_FALLBACK_API_KEY=your-openai-api-key-here
ARIFOS_FAILOVER_OPENAI_FALLBACK_PRIORITY=1
ARIFOS_FAILOVER_OPENAI_FALLBACK_TIMEOUT=20.0
ARIFOS_FAILOVER_OPENAI_FALLBACK_MAX_RETRIES=2

# ============================================================================
# SEA-LION v4 (Backup - Priority 2, Optional)
# ============================================================================
# ARIFOS_FAILOVER_SEALION_BACKUP_TYPE=sealion
# ARIFOS_FAILOVER_SEALION_BACKUP_MODEL=aisingapore/Gemma-SEA-LION-v4-27B-IT
# ARIFOS_FAILOVER_SEALION_BACKUP_API_KEY=your-sealion-api-key-here
# ARIFOS_FAILOVER_SEALION_BACKUP_API_BASE=https://api.sea-lion.ai/v1
# ARIFOS_FAILOVER_SEALION_BACKUP_PRIORITY=2

# ============================================================================
# Gemini (Alternative Fallback - Priority 1)
# ============================================================================
# ARIFOS_FAILOVER_GEMINI_FALLBACK_TYPE=gemini
# ARIFOS_FAILOVER_GEMINI_FALLBACK_MODEL=gemini-2.0-flash-exp
# ARIFOS_FAILOVER_GEMINI_FALLBACK_API_KEY=your-google-api-key-here
# ARIFOS_FAILOVER_GEMINI_FALLBACK_PRIORITY=1

# ============================================================================
# Circuit Breaker Settings (Advanced - Optional)
# ============================================================================
# Consecutive failures before circuit opens (default: 3)
# ARIFOS_FAILOVER_CIRCUIT_BREAKER_THRESHOLD=3

# Cooldown seconds before retry after circuit opens (default: 60)
# ARIFOS_FAILOVER_CIRCUIT_BREAKER_COOLDOWN=60
